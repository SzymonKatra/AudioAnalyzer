<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import audioanalyzer.view.StreamInfoDisplay?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="audioanalyzer.view.MainSceneController"
          prefHeight="700.0" prefWidth="1000.0">
    <columnConstraints>
        <ColumnConstraints percentWidth="100"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="30"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="50"/>
    </rowConstraints>

    <Button GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER"
            style="-fx-font-size: 32;" text="Select audio file"
            onMouseClicked="#selectFileHandler"/>

    <Label fx:id="selectedFileName" GridPane.rowIndex="2" GridPane.halignment="CENTER"
            style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <VBox fx:id="streamBox" GridPane.rowIndex="3" GridPane.halignment="CENTER"/>
</GridPane>
