<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/javafx">
    <GridPane>
        <stylesheets>
            <URL value="@style.css"/>
        </stylesheets>

        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="10"/>
            <RowConstraints percentHeight="10"/>
            <RowConstraints percentHeight="10"/>
            <RowConstraints percentHeight="10"/>
            <RowConstraints percentHeight="10"/>
            <RowConstraints percentHeight="10"/>
            <RowConstraints percentHeight="40"/>
        </rowConstraints>

        <Label id="stream-info-label" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="RIGHT" text="Duration: "/>
        <Label id="stream-info-label" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="RIGHT" text="Channels: "/>
        <Label id="stream-info-label" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="RIGHT" text="Channel layout: "/>
        <Label id="stream-info-label" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="RIGHT" text="Sample rate (Hz): "/>
        <Label id="stream-info-label" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.halignment="RIGHT" text="Bit rate (bps): "/>
        <Label id="stream-info-label" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="RIGHT" text="Codec name: "/>

        <Label id="stream-info-data" fx:id="duration" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="LEFT"/>
        <Label id="stream-info-data" fx:id="channelsCount" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="LEFT"/>
        <Label id="stream-info-data" fx:id="channelLayout" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="LEFT"/>
        <Label id="stream-info-data" fx:id="sampleRate" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="LEFT"/>
        <Label id="stream-info-data" fx:id="bitRate" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.halignment="LEFT"/>
        <Label id="stream-info-data" fx:id="codecName" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.halignment="LEFT"/>

        <Button fx:id="analyze" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6" text="Analyze!" GridPane.halignment="CENTER"
                style="-fx-font-size: 16pt;"/>

    </GridPane>
</fx:root>